{
  "name": "blog-with-fsd",
  "version": "1.0.0",
  "author": "vmishakin",
  "scripts": {
    "build": "webpack --env mode=production apiUrl=https://pena-blog-server.vercel.app/",
    "build:dev": "webpack --env mode=development",
    "lint:scss": "npx stylelint \"**/*.scss\" --max-warnings 0",
    "lint:scss:fix": "npx stylelint \"**/*.scss\" --fix",
    "lint:ts": "eslint \"**/*.{ts,tsx}\" --max-warnings 0",
    "lint:ts:fix": "eslint \"**/*.{ts,tsx}\" --fix",
    "lint:typecheck": "tsc --project ./tsconfig.json --noEmit",
    "start": "webpack serve --env port=3000",
    "start:vite": "vite",
    "start:server": "node ./json-server/index.js",
    "start:dev": "concurrently \"npm run start\" \"npm run start:server\" ",
    "test:unit": "jest --config ./config/jest/jest.config.ts",
    "test:ui": "npx loki test",
    "test:ui:ok": "npx loki approve",
    "test:ui:update": "npx loki update",
    "test:ui:ci": "loki --requireReference --reactUri file:./storybook-static",
    "test:ui:report": "npm run test:ui:json && npm run test:ui:html",
    "test:ui:json": "node scripts/generate-visual-json-report.js",
    "test:ui:html": "reg-cli --from .loki/report.json --report .loki/report.html",
    "test:e2e": "cypress open",
    "lint:all": "npm run lint:ts && npm run lint:scss",
    "storybook": "start-storybook -p 6006 -c ./config/storybook",
    "build-storybook": "build-storybook -c ./config/storybook",
    "prepare": "husky install",
    "postinstall": "rimraf node_modules/.cache"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.18",
    "@react-spring/web": "^9.7.3",
    "@reduxjs/toolkit": "^1.9.7",
    "@use-gesture/react": "^10.3.0",
    "axios": "^1.6.7",
    "concurrently": "^7.6.0",
    "copy-webpack-plugin": "^10.2.4",
    "i18next": "^21.10.0",
    "i18next-browser-languagedetector": "^6.1.8",
    "i18next-http-backend": "^1.4.5",
    "json-server": "^0.17.4",
    "react": "^18.2.0",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18.2.0",
    "react-i18next": "^11.18.6",
    "react-redux": "^7.2.9",
    "react-router-dom": "^6.22.1",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/plugin-transform-runtime": "^7.23.9",
    "@babel/plugin-transform-typescript": "^7.23.6",
